@model Undye.Web.Models.PetitionViewModel

<div data-spy="affix" data-offset-top="0" data-offset-bottom="200">
    @using (Html.BeginForm("Sign", "Home"))
    {
        @Html.AntiForgeryToken()

        <h4>Ta ställning</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="checkbox">
            <label>
                @Html.EditorFor(model => model.Signed) Skriv under
                @Html.ValidationMessageFor(model => model.Signed, "", new { @class = "text-danger" })
            </label>
        </div>

        <input type="submit" value="Save" class="btn btn-default" />
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
