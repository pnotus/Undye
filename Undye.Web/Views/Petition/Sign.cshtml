@using Undye.Web.Models

@model Undye.Web.Models.SignPetitionViewModel

<div class="panel panel-default" data-spy="affix" data-offset-top="0" data-offset-bottom="0">
    @if (Request.IsAuthenticated)
    {
        using (Html.BeginForm("Sign", "Petition"))
        {
            @Html.AntiForgeryToken()

            <h4>Ta ställning</h4>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="checkbox">
                <label>
                    @Html.EditorFor(model => model.Signed) Skriv under
                    @Html.ValidationMessageFor(model => model.Signed, "", new { @class = "text-danger" })
                </label>
            </div>

            <button type="submit" class="btn btn-default">Save</button>
        }
    }
    else
    {
        <p>Genom att logga in får du möjlighet att själv ta ställning.</p>
        <section id="socialLoginForm">
            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel())
        </section>
        @Html.ActionLink("eller med ditt användarnamn och lösenord", "Login", "Account")
    }
</div>